{
  "name": "foundryvtt-fitd-roller",
  "version": "2.0.1",
  "description": "Provides a generic Dice Roller for Forged in the Dark games",
  "main": "module/src/init.js",
  "scripts": {
    "build:release": "./node_modules/.bin/rollup module/src/init.js --file module/fitd-roller.js --format iife",
    "build:test": "./node_modules/.bin/rollup module/src/fitd-roller.js --file fitd-roller.js --format cjs",
    "clean": "rm module/fitd-roller.js fitd-roller.js build.zip",
    "package": "cd module && zip -r ../build.zip . -x src\\* && cd ..",
    "release": "npm test && npm run build:release && npm run package",
    "test": "npm run build:test && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattd/foundryvtt-fitd-roller.git"
  },
  "author": "megastruktur, Andrew Garinger, Matt Dawson",
  "license": "CC-BY-3.0",
  "bugs": {
    "url": "https://github.com/mattd/foundryvtt-fitd-roller/issues"
  },
  "homepage": "https://github.com/mattd/foundryvtt-fitd-roller#readme",
  "devDependencies": {
    "ava": "^4.2.0",
    "rollup": "^2.72.1"
  },
  "ava": {
    "verbose": "true"
  }
}
